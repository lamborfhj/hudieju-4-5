.avatar {
  width: 50px;
  height: 50px;
  border-radius: 25px;
}
.bottom_btn_area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
}
.bottom_btn_area > button {
  background-color: #413d3c;
  color: #ffffff;
  border-radius: 0;
  flex: 1;
}
.bottom_btn_area > button::after {
  display: none;
}
.bottom_btn_area > button:not(:first-child)::before {
  content: " ";
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  border: 1px solid #666666;
}
