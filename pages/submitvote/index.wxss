.weui-cell_without_border::before {
  content: none !important;
}
.icon_star {
  color: red;
  padding-right: 1px;
}
.img_small {
  width: 40px;
  height: 40px;
}
.avatar_small {
  width: 26px;
  height: 26px;
  border-radius: 13px;
}
.bottom_btn_area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
}
.bottom_btn_area > button {
  background-color: #413d3c;
  color: #ffffff;
  border-radius: 0;
  flex: 1;
}
.bottom_btn_area > button[disabled] {
  background-color: #807b7a;
  color: #ffffff;
}
.bottom_btn_area > button::after {
  display: none;
}
.bottom_btn_area > button:not(:first-child)::before {
  content: " ";
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  border: 1px solid #666666;
}
