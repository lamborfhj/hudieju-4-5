.avatar {
  width: 50px;
  height: 50px;
  border-radius: 25px;
}
.bottom_btn_area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
}
.bottom_btn_area > button {
  background-color: #413d3c;
  color: #ffffff;
  border-radius: 0;
  flex: 1;
}
.bottom_btn_area > button::after {
  display: none;
}
.bottom_btn_area > button:not(:first-child)::before {
  content: " ";
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  border: 1px solid #666666;
}
.content-top {
  display: flex;
  align-items: center;
  padding: 20px 10px;
}
.content-top .top-inline {
  border: 1px solid #ddd;
  border-radius: 3px;
  margin-right: 5px;
  font-size: 13px;
  padding: 2px 5px;
}
.content-top button {
  white-space: nowrap;
}
.weui-tab {
  display: flex;
  align-items: center;
  padding: 0 10px;
  border-bottom: 1px solid #ccc;
}
.weui-tab .weui-left-title {
  font-size: 14px;
}
.weui-tab .weui-navbar {
  flex: 1;
  width: 90%;
  position: inherit;
  border-bottom: 0;
}
.weui-tab .weui-bar__item_on .weui-navbar__title {
  color: #1aad19;
}
.weui-tab .weui-navbar__title {
  font-size: 12px;
  color: #888;
}
.weui-tab .weui-navbar__slider {
  width: 1em;
  bottom: -2px;
}
.weui-content {
  display: flex;
  align-items: center;
  padding: 8px;
}
.weui-content .left-bar {
  margin-right: 8px;
  padding: 0 10px;
}
.weui-content .left-bar .black {
  font-size: 15px;
}
.weui-content .left-bar .num {
  font-size: 18px;
  color: #096dd9;
  font-weight: bold;
}
.weui-content .left-bar .line {
  line-height: 45px;
}
.weui-content .right-bar {
  flex: 1;
  overflow-y: auto;
}
.weui-content .right-bar .avatar {
  width: 30px;
  height: 30px;
  margin-right: 8px;
}
.weui-content .right-bar .item-img {
  width: 40px;
  height: 40px;
}
.weui-content .right-bar .item-ul .item-li {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 5px;
}
.weui-content .right-bar .item-ul .item-li + .item-li {
  border-top: 1px solid #ccc;
}
.weui-content .right-bar .item-ul .item-grey {
  color: #888;
  font-size: 13px;
  max-width: 50%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.weui-content .left-bar,
.weui-content .right-bar {
  height: 200px;
  border: 1px solid #ccc;
  border-radius: 3px;
}
.item-name {
  max-width: 50px;
}
